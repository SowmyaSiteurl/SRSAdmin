<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/staffListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.siteurl.in.srsadmin.activities.ListOfStaff">

    <include
        android:id="@+id/staff_list_toolbar"
        layout="@layout/main_toolbar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staff_list_toolbar"
        android:padding="10dp">

        <TextView
            android:id="@+id/noStaffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text=" :( Looks Like No Staffs To Show"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />


        <ListView
            android:id="@+id/staffLists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:dividerHeight="0dp"
            android:divider="@android:color/white"
            android:layout_alignParentStart="true">

        </ListView>

    </RelativeLayout>

</RelativeLayout>
