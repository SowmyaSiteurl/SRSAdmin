<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:id="@+id/stafflistlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/staffname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/staffemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/staffname"
                android:layout_marginLeft="10dp"
                android:text="email"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/staffphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/staffemail"
                android:layout_marginLeft="10dp"
                android:text="phno"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/staffaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/staffphone"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="Address"
                android:textColor="#000000"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/deletestaffLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/stafflistlayout"
                tools:ignore="NotSibling">


                <ImageView
                    android:id="@+id/deletestaffImage"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:src="@drawable/ic_delete_black_24dp" />


                <ImageView
                    android:id="@+id/editstaffImage"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:src="@drawable/ic_mode_edit_black_24dp" />

                <TextView
                    android:id="@+id/deleteStaff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/deletestaffImage"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="end"
                    android:text="Delete"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/editStaff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/editstaffImage"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="60dp"
                    android:gravity="end"
                    android:text="Edit"
                    android:textAlignment="center"
                    android:textColor="@android:color/black" />

            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>